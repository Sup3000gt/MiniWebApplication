@using System.Globalization
@model IEnumerable<MiniWebApplication.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = Model.Sum(item => item.Quantity * item.Product.Price);
    var usdCulture = new CultureInfo("en-US");
    bool isCartEmpty = !Model.Any();  // Check if the cart is empty
}

<h1 class="cart-title">Shopping Cart</h1>

<!-- Bootstrap alert for success message -->
@if (TempData["Success"] != null)
{
    <div id="success-alert" class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<script>
    // Fade-out effect for the success message
    setTimeout(function () {
        var alert = document.getElementById('success-alert');
        if (alert) {
            alert.style.transition = "opacity 2s";  // Smooth fade-out over 2 seconds
            alert.style.opacity = "0";  // Start fading out
            setTimeout(function () {
                alert.remove();  // Remove the element after fade-out
            }, 2000);  // Match the duration of the transition
        }
    }, 3000);  // Start fade-out after 3 seconds
</script>

<style>
    .card-title {
        font-family: 'Poppins', sans-serif; /* Apply modern font */
        font-weight: 600; /* Slightly bolder for emphasis */
        font-size: 28px; /* Larger size for a modern look */
        margin-bottom: 10px;
        color: #333; /* Dark text for better readability */
    }

    .card-text {
        font-family: 'Poppins', sans-serif; /* Apply the same modern font */
        font-weight: 400;
        font-size: 18px;
        line-height: 1.6; /* Improve readability with spacing */
        color: #555;
    }

    .card {
        background: rgba(255, 255, 255, 0.5); /* 50% transparency */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 30px;
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>



<!-- Display a different message if the cart is empty -->
@if (isCartEmpty)
{
    <div class="empty-cart-message">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Your cart is empty!</h4>
                <p class="card-text">It looks like you haven't added anything yet. Let’s go explore and find some great products!</p>
                <div class="button-container">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                        <i class="fas fa-shopping-bag"></i> Start Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
}

else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1"
                                   class="form-control quantity-input" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-sync-alt"></i> Update
                            </button>
                        </form>
                    </td>
                    <td>@(item.Product.Price.ToString("C", usdCulture))</td>
                    <td>@((item.Quantity * item.Product.Price).ToString("C", usdCulture))</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p class="total-price">Total: <strong>@total.ToString("C", usdCulture)</strong></p>

    <div class="button-group mt-4">
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary me-3">
            <i class="fas fa-shopping-bag"></i> Continue Shopping
        </a>

        <form asp-action="PlaceOrder" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check-circle"></i> Place Order
            </button>
        </form>
    </div>
}
