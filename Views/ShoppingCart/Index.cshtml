@using System.Globalization
@model IEnumerable<MiniWebApplication.Models.ShoppingCartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = Model.Sum(item => item.Quantity * item.Product.Price);
    var usdCulture = new CultureInfo("en-US");
    bool isCartEmpty = !Model.Any();  // Check if the cart is empty
    int counter = 1; // Initialize the counter
}

<h1 class="cart-title">Shopping Cart</h1>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var alert = document.getElementById('success-alert');
        if (alert) {
            setTimeout(function () {
                alert.classList.add('hidden'); // Add the 'hidden' class to trigger CSS opacity transition
                setTimeout(function () {
                    alert.style.display = 'none'; // Optionally set display to none after fade out
                }, 500); // Duration matches the CSS transition time
            }, 3000); // Start fade-out after 3 seconds
        }
    });
</script>
<style>
    .card-title {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 28px;
        margin-bottom: 10px;
        color: #333;
    }

    .card-text {
        font-family: 'Poppins', sans-serif;
        font-weight: 400;
        font-size: 18px;
        line-height: 1.6;
        color: #555;
    }

    .card {
        background: rgba(255, 255, 255, 0.5);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border-radius: 12px;
        padding: 30px;
        max-width: 600px;
        width: 100%;
        text-align: center;
    }

    .button-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 16px;
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
    #success-alert {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        font-size: 16px;
        padding: 15px 20px;
        border-radius: 8px;
        width: 100%; /* Ensure it takes the full width of the parent */
        max-width: none; /* Remove any max-width constraint */
        text-align: center;
        box-sizing: border-box; /* Include padding in width calculation */
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: opacity 0.5s ease-out;
        position: absolute; /* Position within the relative container */
        top: 0;
        left: 0;
        right: 0;
        margin: 0; /* Remove margins */
    }
        #success-alert.hidden {
            opacity: 0;
        }

    .success-message-container {
        margin-top: 20px;
        min-height: 60px; /* Ensure container has a consistent height */
        position: relative; /* For positioning the alert */
        width: 400px; /* Ensure it takes the full available width */
    }


    .alert-placeholder {
        height: 60px; /* Adjust to match the height of the alert */
    }
</style>

@if (isCartEmpty)
{
    <!-- Empty Cart Message -->
    <div class="empty-cart-message">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Your cart is empty!</h4>
                <p class="card-text">It looks like you haven't added anything yet. Let’s go explore and find some great products!</p>
                <div class="button-container">
                    <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                        <i class="fas fa-shopping-bag"></i> Start Shopping
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Cart Content -->
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align: left;">
                        @($"{counter++}. {item.Product.Name}") <!-- Display counter + product name -->
                    </td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <input type="number" name="quantity" value="@item.Quantity" min="1"
                                   class="form-control quantity-input" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-sync-alt"></i> Update
                            </button>
                        </form>
                    </td>
                    <td>@(item.Product.Price.ToString("C", usdCulture))</td>
                    <td>@((item.Quantity * item.Product.Price).ToString("C", usdCulture))</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                            <input type="hidden" name="productId" value="@item.ProductId" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Remove
                            </button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>

    <p class="total-price">Total: <strong>@total.ToString("C", usdCulture)</strong></p>

    <div class="button-group mt-4">
        <a href="@Url.Action("Index", "Products")" class="btn btn-primary me-3">
            <i class="fas fa-shopping-bag"></i> Continue Shopping
        </a>

        <form asp-action="PlaceOrder" method="post" class="d-inline">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check-circle"></i> Place Order
            </button>
        </form>
    </div>
}

<!-- Success message always at the bottom -->
<div class="success-message-container">
    @if (TempData["Success"] != null)
    {
        <div id="success-alert" class="alert alert-success" role="alert">
            @TempData["Success"]
        </div>
    }
    else
    {
        <!-- Empty placeholder to maintain space -->
        <div class="alert-placeholder"></div>
    }
</div>




