@{
    ViewData["Title"] = "Registration Successful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="card p-4 text-center shadow" style="width: 400px; background-color: rgba(255, 255, 255, 0.7); border-radius: 15px;">
            <div class="card-body">
                <h2 class="card-title text-success">Registration Successful!</h2>
                <p class="card-text mt-3">Thank you for registering with us.</p>
                <p>Please check your email to confirm your account.</p>
                <a href="@Url.Action("Login", "Account")" class="btn btn-primary mt-3">Go to Login</a>
            </div>
        </div>
    </div>
</div>
