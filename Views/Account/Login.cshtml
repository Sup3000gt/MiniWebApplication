@model MiniWebApplication.ViewModels.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
   <div class="card p-4" style="width: 400px; background-color: rgba(255, 255, 255, 0.3);">
        <h2 class="text-center">Login</h2>
        <form method="post" asp-action="Login">
            @Html.AntiForgeryToken()

            <!-- Show only validation summary -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Username">Username:</label>
                <input asp-for="Username" class="form-control" required />
                <!-- Removed asp-validation-for to prevent redundancy -->
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" type="password" class="form-control" required />
                <!-- Removed asp-validation-for to prevent redundancy -->
            </div>
            <button type="submit" class="btn btn-primary w-100" style="display: flex; justify-content: center; align-items: center; height: 45px;">
                Login
            </button>

        </form>
        <div class="mt-3 text-center">
            <span>Don't have an account? <a href="@Url.Action("Register", "Account")">Register Now</a></span>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
