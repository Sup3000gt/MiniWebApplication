@model MiniWebApplication.Models.Order

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Increase font size for paragraphs */
    .order-details p {
        font-size: 1.2rem; /* Adjust the value as needed */
    }

    /* Increase font size for table headers and cells */
    .order-details table th,
    .order-details table td {
        font-size: 1.1rem; /* Adjust the value as needed */
    }

    /* Increase font size for the "Back to Orders" button */
    .order-details .btn {
        font-size: 1rem; /* Adjust the value as needed */
    }

</style>

<h1 class="cart-title">Order Details</h1>

<p style="font-size: 1.4rem;"><strong>Order ID:</strong> @Model.OrderId</p>
<p style="font-size: 1.4rem;"><strong>Order Date:</strong> @Model.OrderDate.ToString("g")</p>
<p style="font-size: 1.4rem;"><strong>Total Amount:</strong> @Model.TotalAmount.ToString("C")</p>


<table class="table-container">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td>@detail.Product.Name</td>
                <td>@detail.Quantity</td>
                <td>@detail.Price.ToString("C")</td>
                <td>@((detail.Quantity * detail.Price).ToString("C"))</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Orders")" class="btn btn-secondary d-flex align-items-center mt-4">
    <i class="fas fa-arrow-left me-2"></i> Back to Orders
</a>